<header class="intro-header header2">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-heading">
                    <h1>  <%= @post.title %> </h1>
                    <span class="meta">
                      <%= link_to "Back", post_url(@post) %> |
                      <%= link_to "Delete Post", posts_url, method: "delete",
                      data: {confirm: "Are you sure you want to delete this post?"} %>
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>


<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
              <%= render "form" %>
            </div>
        </div>
    </div>
</article>
